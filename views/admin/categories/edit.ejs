<%- include('../../partials/header.ejs') %>

    <body>
        <header>
            <%- include('../../partials/navbar.ejs') %>
        </header>


        <div class="container">

            <hr>

            <div class="card">

                <div class="card-header">
                    <h2 class="text-center mb-3">Edição de categoria</h2>
                </div>

                <div class="card-body">

                    <form action="/categories/update" method="POST">

